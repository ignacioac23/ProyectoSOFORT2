<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradientlogin"
    android:orientation="vertical"
    tools:context=".Foro">

    <!--<ListView
        android:id="@+id/listdatos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="25dp"
        android:background="@android:color/white"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="20dp" />
     -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:background="@drawable/btnsesion"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edtMensaje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="¿Qué está pasando?"
            android:inputType="textPersonName"
            android:padding="10dp" />

        <Button
            android:id="@+id/btnCrear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/botones"
            android:text="INGRESAR NUEVO MENSAJE AL FORO"
            android:textColor="#bd65f0"
            android:textColorHint="#bd65f0" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RecyclerMensajes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp" />
    </LinearLayout>

</LinearLayout>